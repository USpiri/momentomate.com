---
import Stream from "@components/Stream.astro";
import MSubtitle from "../components/MSubtitle.astro";
import MTitle from "../components/MTitle.astro";
import PostCard from "../components/PostCard.astro";
import Layout from "../layouts/Layout.astro";

const allPosts = await Astro.glob("../pages/podcast/*.md");
---

<Layout title="Momento Mate">
  <div class="pb-7 mt-4">
    <MTitle />
  </div>
  <MSubtitle>Podcasts</MSubtitle>
  <ul class="flex gap-4 flex-col">
    {
      allPosts.reverse().map((pod) => (
        <li>
          <PostCard
            title={pod.frontmatter.title}
            url={pod.url}
            description={pod.frontmatter.description}
          />
        </li>
      ))
    }
  </ul>
</Layout>
