---
import MSubtitle from "../components/MSubtitle.astro";
import MTitle from "../components/MTitle.astro";
import PostCard from "../components/PostCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Momento Mate">
  <main class="flex items-center flex-col">
    <div class="max-w-3xl w-full">
      <MTitle />
      <MSubtitle>Podcasts</MSubtitle>
      <div class="flex flex-col gap-2">
        <PostCard
          title="Ep. 1: Momento Mate"
          description="¿Qué es 'Momento Mate'?, ¿Cómo surge? y ¿Quienes somos?"
          url="1"
        />
        <PostCard
          title="Ep. 2: Somos los Más Grandes del Mundo"
          description="¿Qué significa y qué se siente 'Ser Argentino'?"
          url="2"
        />
      </div>
    </div>
  </main>
</Layout>
<style is:global lang="scss">
  ::-webkit-scrollbar {
    width: 5px;
    height: 5px;
    border: 1px solid rgb(254 205 211);
  }
  ::-webkit-scrollbar-track {
    box-shadow: inset 0 0 6px rgb(253 164 175);
  }
  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background: rgb(253 164 175);
    outline: 0;
  }
  ::-webkit-scrollbar-corner {
    background: transparent;
  }
</style>
