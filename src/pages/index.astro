---
import { getCollection } from "astro:content";
import MSubtitle from "../components/MSubtitle.astro";
import MTitle from "../components/MTitle.astro";
import PostCard from "../components/PostCard.astro";
import Layout from "../layouts/Layout.astro";

const posts = await getCollection("posts");
const filteredPosts = posts.filter((post: any) =>
  post.slug.startsWith("podcast")
);
---

<Layout title="Momento Mate">
  <div class="pb-7 mt-4">
    <MTitle />
  </div>
  <MSubtitle>Podcasts</MSubtitle>
  <ul class="flex gap-4 flex-col pb-20">
    {
      filteredPosts.map((pod) => (
        <li>
          <PostCard
            title={pod.data.title}
            url={pod.slug}
            description={pod.data.description}
          />
        </li>
      ))
    }
  </ul>
</Layout>
