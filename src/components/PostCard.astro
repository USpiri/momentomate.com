---
const { title, description, url } = Astro.props;
---

<div class="w-full">
  <a
    href={url}
    class="flex flex-row md:rounded-lg h-28 md:h-32 rounded-none shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] bg-rose-100 hover:bg-rose-50 transition-all"
  >
    <img
      class="w-28 md:w-32 aspect-square object-cover md:rounded-lg"
      src="https://tecdn.b-cdn.net/wp-content/uploads/2020/06/vertical.jpg"
      alt=""
    />
    <div class="p-4 w-full md:w-auto overflow-hidden">
      <h5
        class="text-lg md:text-xl truncate font-bold pb-1 md:pb-2 text-rose-700"
      >
        {title}
      </h5>
      <p class="font-semibold text-sm md:text-lg">
        {description}
      </p>
    </div>
  </a>
</div>
