---
const { title, description, url } = Astro.props;
---

<a
  href=`/podcast/${url}`
  class="flex flex-row rounded-lg shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] bg-rose-100 hover:bg-rose-50 transition-all"
>
  <img
    class="w-36 aspect-square object-cover rounded-lg"
    src="https://tecdn.b-cdn.net/wp-content/uploads/2020/06/vertical.jpg"
    alt=""
  />
  <div class="p-4">
    <h5 class="text-xl font-bold pb-2 text-rose-700">{title}</h5>
    <p class="font-semibold">
      {description}
    </p>
  </div>
</a>
