---
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="rounded-lg p-3 bg-rose-100 flex flex-row justify-center hover:scale-[102%] transition items-center gap-3"
>
  <div class="h-7 fill-rose-800">
    <slot name="icon" />
  </div>
  <h3 class="h-7 font-semibold text-rose-800 text-xl">{label}</h3>
</a>
