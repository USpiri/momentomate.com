---
interface Props {
  tags: string[];
}
const { tags } = Astro.props;
---

<div class="flex gap-2">
  {
    tags.map((tag: string) => (
      <a
        class="visited:text-rose-400 text-rose-400 hover:text-rose-300 transition-all"
        href={`/tags/${tag}`}
      >
        #{tag}
      </a>
    ))
  }
</div>
